<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Light mode theme-->

    <!-- Base application theme -->
    <style name="Base.Theme.Alva" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background and Surface colors - ADAPTIVE -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:windowBackground">@color/background_color</item>

        <!-- Text colors - ADAPTIVE -->
        <item name="colorOnBackground">@color/primary_text</item>
        <item name="colorOnSurface">@color/primary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <!-- Main App Theme -->
    <style name="Theme.Alva" parent="Base.Theme.Alva">
        <!-- Customize your theme here -->

        <!-- Action Bar / Toolbar styling -->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!-- FAB styling -->
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>

        <!-- Card styling -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>

        <!-- Button styling -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>

        <!-- Text Input styling -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <!-- Custom Widget Styles -->

    <!-- Custom FAB Style -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent_color</item>
        <item name="tint">@color/white</item>
        <item name="elevation">6dp</item>
    </style>

    <!-- Custom Card Style -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_color</item>
        <item name="strokeColor">@color/outline_color</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Custom Outlined Button Style -->
    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_color</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Custom Text Button Style -->
    <style name="Widget.App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary_color</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Custom Text Input Layout -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/secondary_text</item>
    </style>

    <!-- Circular Image View Style -->
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Profile Text Appearance Styles -->

    <!-- Profile Name Text Style -->
    <style name="TextAppearance.App.ProfileName" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!-- Profile Email Text Style -->
    <style name="TextAppearance.App.ProfileEmail" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- BMI Value Text Style -->
    <style name="TextAppearance.App.BmiValue" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">32sp</item>
    </style>

    <!-- BMI Category Text Style -->
    <style name="TextAppearance.App.BmiCategory" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Section Header Text Style -->
    <style name="TextAppearance.App.SectionHeader" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Stats Number Text Style -->
    <style name="TextAppearance.App.StatsNumber" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Small Label Text Style -->
    <style name="TextAppearance.App.SmallLabel" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- Dialog Styles -->

    <!-- Custom Dialog Style -->
    <style name="Widget.App.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:windowBackground">@color/surface_color</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="Widget.App.ProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/primary_color</item>
        <item name="trackColor">@color/outline_color</item>
        <item name="trackCornerRadius">4dp</item>
    </style>

</resources>