<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card Styles - ADAPTIVE -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_color</item>
    </style>

    <style name="CardStyle.Compact">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <!-- Button Styles - ADAPTIVE -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/accent_color</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ButtonStyle.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/accent_color</item>
        <item name="android:textColor">@color/accent_color</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Text Styles - ADAPTIVE -->
    <style name="TextAppearance.Alva.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Alva.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Alva.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Alva.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- Profile Email Text Style -->
    <style name="TextAppearance.Alva.ProfileEmail" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Input Field Styles - ADAPTIVE -->
    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/accent_color</item>
        <item name="hintTextColor">@color/secondary_text</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- FAB Styles - ADAPTIVE -->
    <style name="FABStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent_color</item>
        <item name="tint">@color/text_on_primary</item>
    </style>

    <!-- Toolbar Styles - ADAPTIVE -->
    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary_color</item>
        <item name="titleTextColor">@color/text_on_primary</item>
        <item name="subtitleTextColor">@color/text_on_primary</item>
    </style>

</resources>